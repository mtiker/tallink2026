@page "/Events/{eventId:int}/Balances"
@model TallinkFinance.Pages.Events.Balances.IndexModel
@{
    ViewData["Title"] = "Balances";
}

@if (Model.EventItem is null)
{
    <div class="alert alert-warning">Event not found.</div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-0">Balances - @Model.EventItem.Name</h1>
            <div class="text-muted">Per person owed / owes / net overview</div>
        </div>
        <a class="btn btn-outline-secondary" asp-page="/Events/Details" asp-route-id="@Model.EventItem.Id">Dashboard</a>
    </div>

    <form method="get" class="card shadow-sm mb-3">
        <div class="card-body d-flex flex-wrap gap-3 align-items-center">
            <input type="hidden" name="eventId" value="@Model.EventItem.Id" />
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="includePayments" name="includePayments" value="true" checked="@Model.IncludePayments" />
                <input type="hidden" name="includePayments" value="false" />
                <label class="form-check-label" for="includePayments">Include payments</label>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Apply</button>
        </div>
    </form>

    @if (Model.Rows.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                <tr>
                    <th>Person</th>
                    <th class="text-end">Owes</th>
                    <th class="text-end">Is Owed</th>
                    <th class="text-end">Net</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var row in Model.Rows)
                {
                    <tr>
                        <td>
                            <a asp-page="/Events/People/Details" asp-route-eventId="@Model.EventItem.Id" asp-route-personId="@row.PersonId">
                                @row.PersonName
                            </a>
                        </td>
                        <td class="text-end">@row.OwesTotal.ToString("0.00") @Model.EventItem.Currency</td>
                        <td class="text-end">@row.IsOwedTotal.ToString("0.00") @Model.EventItem.Currency</td>
                        <td class="text-end fw-semibold">@row.Net.ToString("0.00") @Model.EventItem.Currency</td>
                    </tr>
                }
                </tbody>
                <tfoot>
                <tr>
                    <th>Control</th>
                    <th></th>
                    <th></th>
                    <th class="text-end">@Model.NetControl.ToString("0.00") @Model.EventItem.Currency</th>
                </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No balance data yet.</div>
    }
}
