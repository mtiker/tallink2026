@page "/Events/{eventId:int}/Debts"
@model TallinkFinance.Pages.Events.Debts.IndexModel
@{
    ViewData["Title"] = "Debts";
}

@if (Model.EventItem is null)
{
    <div class="alert alert-warning">Event not found.</div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-0">Debts - @Model.EventItem.Name</h1>
            <div class="text-muted">Direct debtor -> creditor lines</div>
        </div>
        <a class="btn btn-outline-secondary" asp-page="/Events/Details" asp-route-id="@Model.EventItem.Id">Dashboard</a>
    </div>

    <form method="get" class="card shadow-sm mb-3">
        <div class="card-body d-flex flex-wrap gap-3 align-items-center">
            <input type="hidden" name="eventId" value="@Model.EventItem.Id" />
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="includePayments" name="includePayments" value="true" checked="@Model.IncludePayments" />
                <input type="hidden" name="includePayments" value="false" />
                <label class="form-check-label" for="includePayments">Include payments</label>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Apply</button>
        </div>
    </form>

    @if (Model.Debts.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                <tr>
                    <th>Debtor</th>
                    <th>Creditor</th>
                    <th class="text-end">Amount</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var debt in Model.Debts)
                {
                    <tr>
                        <td>
                            <a asp-page="/Events/People/Details" asp-route-eventId="@Model.EventItem.Id" asp-route-personId="@debt.DebtorId">
                                @debt.DebtorName
                            </a>
                        </td>
                        <td>
                            <a asp-page="/Events/People/Details" asp-route-eventId="@Model.EventItem.Id" asp-route-personId="@debt.CreditorId">
                                @debt.CreditorName
                            </a>
                        </td>
                        <td class="text-end">@debt.Amount.ToString("0.00") @Model.EventItem.Currency</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No debt lines to show.</div>
    }
}
