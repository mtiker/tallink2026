@page "/Events/{eventId:int}/Expenses/Add"
@using TallinkFinance.Models
@model TallinkFinance.Pages.Events.Expenses.CreateModel
@{
    ViewData["Title"] = "Add Expense";
}

@if (Model.EventItem is null)
{
    <div class="alert alert-warning">Event not found.</div>
}
else if (!Model.PersonOptions.Any())
{
    <div class="alert alert-warning">
        Add at least one person before adding expenses.
        <a class="alert-link" asp-page="/Events/People/Create" asp-route-eventId="@Model.EventItem.Id">Add person</a>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">Add Expense - @Model.EventItem.Name</h1>
        <a class="btn btn-outline-secondary" asp-page="/Events/Expenses/Index" asp-route-eventId="@Model.EventItem.Id">Back to Expenses</a>
    </div>

    <form method="post" class="card shadow-sm">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <label asp-for="Input.Title" class="form-label"></label>
                    <input asp-for="Input.Title" class="form-control" />
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-3">
                    <label asp-for="Input.Date" class="form-label"></label>
                    <input asp-for="Input.Date" type="date" class="form-control" />
                    <span asp-validation-for="Input.Date" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-3">
                    <label asp-for="Input.Amount" class="form-label"></label>
                    <input asp-for="Input.Amount" type="number" step="0.01" min="0.01" class="form-control" />
                    <span asp-validation-for="Input.Amount" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="Input.PaidByPersonId" class="form-label">Paid by</label>
                    <select asp-for="Input.PaidByPersonId" class="form-select">
                        @foreach (var person in Model.PersonOptions)
                        {
                            <option value="@person.Id">@person.Name</option>
                        }
                    </select>
                    <span asp-validation-for="Input.PaidByPersonId" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="Input.SplitMode" class="form-label">Split mode</label>
                    <select asp-for="Input.SplitMode" class="form-select">
                        <option value="@SplitMode.Equal">Equal</option>
                        <option value="@SplitMode.CustomAmount">Custom amount</option>
                        <option value="@SplitMode.CustomRatio">Custom ratio</option>
                    </select>
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="Input.Category" class="form-label"></label>
                    <input asp-for="Input.Category" class="form-control" />
                    <span asp-validation-for="Input.Category" class="text-danger"></span>
                </div>
            </div>

            <hr class="my-4" />
            <h2 class="h5">Participants and Shares</h2>
            <p class="text-muted mb-2">
                Equal split ignores custom columns and sends all rounding remainder cents to the payer.
                Custom amount requires selected custom amounts to sum to total.
                Custom ratio uses positive weights.
            </p>

            <div class="table-responsive">
                <table class="table table-sm align-middle">
                    <thead>
                    <tr>
                        <th>Person</th>
                        <th class="text-center">Include</th>
                        <th class="text-end">Custom Amount</th>
                        <th class="text-end">Ratio</th>
                    </tr>
                    </thead>
                    <tbody>
                    @for (var index = 0; index < Model.ParticipantShares.Count; index++)
                    {
                        <tr>
                            <td>
                                @Model.ParticipantShares[index].PersonName
                                <input asp-for="ParticipantShares[index].PersonId" type="hidden" />
                                <input asp-for="ParticipantShares[index].PersonName" type="hidden" />
                            </td>
                            <td class="text-center">
                                <input asp-for="ParticipantShares[index].IsSelected" class="form-check-input" />
                            </td>
                            <td class="text-end">
                                <input asp-for="ParticipantShares[index].CustomAmount" type="number" step="0.01" min="0" class="form-control text-end" />
                            </td>
                            <td class="text-end">
                                <input asp-for="ParticipantShares[index].Ratio" type="number" step="0.01" min="0" class="form-control text-end" />
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save Expense</button>
            <a class="btn btn-outline-secondary" asp-page="/Events/Expenses/Index" asp-route-eventId="@Model.EventItem.Id">Cancel</a>
        </div>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
