@page "/Events"
@model TallinkFinance.Pages.Events.IndexModel
@{
    ViewData["Title"] = "Events";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Events</h1>
    <a class="btn btn-primary" asp-page="/Events/Create">Create Event</a>
</div>

@if (Model.Events.Any())
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
            <tr>
                <th>Name</th>
                <th>Dates</th>
                <th class="text-end">People</th>
                <th class="text-end">Expenses</th>
                <th class="text-end">Payments</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Events)
            {
                <tr>
                    <td class="fw-semibold">@item.Name</td>
                    <td>
                        @item.StartDate.ToString("yyyy-MM-dd")
                        @if (item.EndDate.HasValue)
                        {
                            <span> to @item.EndDate.Value.ToString("yyyy-MM-dd")</span>
                        }
                    </td>
                    <td class="text-end">@item.PeopleCount</td>
                    <td class="text-end">@item.ExpenseTotal.ToString("0.00") @item.Currency</td>
                    <td class="text-end">@item.PaymentTotal.ToString("0.00") @item.Currency</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-page="/Events/Details" asp-route-id="@item.Id">Open</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mb-0">
        No events yet. Create your first event to start tracking expenses.
    </div>
}
