@page
@model TallinkFinance.Pages.Events.CreateModel
@{
    ViewData["Title"] = "Create Event";
}

<div class="mb-3">
    <h1 class="h3 mb-0">Create Event</h1>
</div>

<form method="post" class="card shadow-sm">
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row g-3">
            <div class="col-12">
                <label asp-for="EventInput.Name" class="form-label"></label>
                <input asp-for="EventInput.Name" class="form-control" />
                <span asp-validation-for="EventInput.Name" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4">
                <label asp-for="EventInput.StartDate" class="form-label"></label>
                <input asp-for="EventInput.StartDate" type="date" class="form-control" />
                <span asp-validation-for="EventInput.StartDate" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4">
                <label asp-for="EventInput.EndDate" class="form-label"></label>
                <input asp-for="EventInput.EndDate" type="date" class="form-control" />
                <span asp-validation-for="EventInput.EndDate" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-4">
                <label asp-for="EventInput.Currency" class="form-label"></label>
                <input asp-for="EventInput.Currency" maxlength="3" class="form-control text-uppercase" />
                <span asp-validation-for="EventInput.Currency" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="card-footer d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-outline-secondary" asp-page="/Events/Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
